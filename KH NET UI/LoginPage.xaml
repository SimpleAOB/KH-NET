<Page x:Class="KH_NET_UI.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KH_NET_UI"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="LoginPage" MinWidth="95">
    <Grid>
        <local:KH_Textbox x:Name="Username_tb" Margin="10,10,10,267" BorderThickness="0,0,0,1" BorderBrush="Black" Width="Auto"/>
        <Label x:Name="Username_lbl" Content="Username" HorizontalAlignment="Left" Margin="10,7,0,0" VerticalAlignment="Top" Foreground="Black" Opacity="0.6"/>
        <local:KH_Textbox x:Name="Password_tb" Margin="10,38,10,239" BorderThickness="0,0,0,1" BorderBrush="Black" Width="Auto"/>
        <Label x:Name="Password_lbl" Content="Password" HorizontalAlignment="Left" Margin="10,33,0,0" VerticalAlignment="Top" Foreground="Black" Opacity="0.6"/>
        <Button x:Name="button" Content="Log In" HorizontalAlignment="Left" Margin="215,66,0,0" VerticalAlignment="Top" Width="75" Background="{x:Null}" BorderBrush="Black"/>
    </Grid>
</Page>
