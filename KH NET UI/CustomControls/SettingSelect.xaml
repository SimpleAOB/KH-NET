<UserControl x:Class="KH_NET_UI.SettingSelectControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KH_NET_UI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Separator Height="100" Margin="25,14,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="NeverRelog_Setting_Checkbox" IsChecked="True" Content="Attempt Auto-Relogin" HorizontalAlignment="Left" Margin="25,73,0,0" VerticalAlignment="Top" MouseDown="NeverRelog_Setting_Checkbox_MouseDown"/>
        <Label x:Name="Settings_Lbl" Content="General" HorizontalAlignment="Left" Margin="25,10,0,0" VerticalAlignment="Top" FontSize="36"/>
    </Grid>
</UserControl>
