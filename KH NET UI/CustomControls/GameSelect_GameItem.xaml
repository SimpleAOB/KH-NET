<UserControl x:Class="KH_NET_UI.GameSelect_GameItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KH_NET_UI"
             mc:Ignorable="d" 
             Height="45" d:DesignWidth="750">
    <Grid x:Name="ProccessItem_Grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="233"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="Game_Name" Content="Game_Name" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Label x:Name="Game_Desc" Content="Game_Desc" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Rectangle Fill="Transparent" HorizontalAlignment="Left" Height="45" VerticalAlignment="Top" Width="750" Grid.ColumnSpan="4"/>
        <!--This is used to make the whole item selectable in the ListBox-->
    </Grid>
</UserControl>
