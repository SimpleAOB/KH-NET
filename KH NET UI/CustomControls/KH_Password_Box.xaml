<UserControl x:Class="KH_NET_UI.KH_Password_Box"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KH_NET_UI"
             mc:Ignorable="d" 
             d:DesignHeight="23" d:DesignWidth="120" Width="120">
    <PasswordBox x:Name="passwordBox" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Black">
        <PasswordBox.Template>
            <ControlTemplate TargetType="{x:Type PasswordBox}">
                <ScrollViewer Name="PART_ContentHost"/>
            </ControlTemplate>
        </PasswordBox.Template>
    </PasswordBox>
</UserControl>
