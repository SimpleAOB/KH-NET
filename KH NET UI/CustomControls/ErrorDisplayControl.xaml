<UserControl x:Class="KH_NET_UI.ErrorDisplayControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KH_NET_UI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Height="Auto" Width="Auto">
    <Grid>
        <Rectangle x:Name="Error_Rectangle" Fill="Black" Opacity="0.6" Cursor="Hand" MouseDown="Rectangle_MouseDown"/>
        <Grid x:Name="Error_Grid" Height="40">
            <Border x:Name="Error_Background" Background="Orange" BorderThickness="1" CornerRadius="2">
                <Label x:Name="Error_Label" Content="Error_Label" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
            </Border>
        </Grid>
    </Grid>
</UserControl>
